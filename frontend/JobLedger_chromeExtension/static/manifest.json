{
    "manifest_version": 3,
    "name": "JobLedger",
    "version": "1.0.0",
    "description": "This is the chrome-extension frontend for JobLedger.",
    "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
    },
    "action": {
    "default_title": "Job Ledger",
    "default_popup": "popup.html"
    },
    "permissions": [
    "storage","activeTab","scripting","tabs", "identity.email", "identity"
    ],
    "oauth2": {
      "client_id": "167652472526-07o4po4udio788natp5p9pficlcmtg43.apps.googleusercontent.com",
      "scopes": [
        "https://www.googleapis.com/auth/userinfo.email",
        "https://www.googleapis.com/auth/userinfo.profile"
      ]
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
    
}